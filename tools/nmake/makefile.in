# ============================================================================
# File: makefile
# makefile for nmake
# ============================================================================

# Common part
TOP_SRC_DIR = @top_srcdir@
include $(TOP_SRC_DIR)/makefile.common

# Local changes
# Note that nmake does not build as Unicode.
TARGET_NAME = $(TARGETCOMPLUS)/nmake

SOURCES=action.cpp \
        build.cpp \
        charmap.cpp \
        command.cpp \
        error.cpp \
        exec.cpp \
        file.cpp \
        getrcmsg.c \
        globals.cpp \
        ifexpr.cpp \
        init.cpp \
        inline.cpp \
        lexer.cpp \
        macro.cpp \
        nmake.cpp \
        parser.cpp \
        print.cpp \
        rpn.cpp \
        rule.cpp \
        util.cpp \
        utilp.cpp \
        win32.cpp

# Objects
CPP_OBJS = $(SOURCES:.cpp=.o)
OBJS = $(CPP_OBJS:.c=.o)

#################
# Targets

all: makefile $(TARGET_NAME)

$(TARGET_NAME) : makefile $(OBJS)
	ld -o $@ $(LDFLAGS) $(LINKER_FLAGS) $(REQUIRED_CRUNTIME) -l$(PAL_LIB) $(OBJS) $(GCC_LIB)

makefile : makefile.in
	@echo $? is newer than $@. Please rerun $(TOP_SRC_DIR)/configure.
	@exit 1

clean:
	rm -f *.o
	rm -f $(TARGET_NAME)
